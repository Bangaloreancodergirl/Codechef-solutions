#include <stdio.h>
int main(void)
{
    int t;
    scanf("%d",&t);
    while(t--)
    {
        int a,n,d;
        scanf("%d %d",&n,&a);
        d=n-a;
        if(d>a)
        {
            printf("%d\n",a);
        }
        else if(a>d)
        {
            printf("%d\n",d);
        }
        else
        {
            printf("%d\n",a);
        }
        
    }
    return 0;
}
